# Nginx configuration for Pixli Pro
# Copy this to your Nginx sites-available directory and symlink to sites-enabled
# Or add this configuration to your existing server block

server {
    listen 80;
    listen [::]:80;
    server_name pixli-pro.jamescutts.me;
    
    # Point to the dist directory
    root /var/www/pixli-pro.jamescutts.me/public_html/dist;
    index index.html;

    # Set correct MIME types (critical for JavaScript modules)
    types {
        application/javascript js mjs;
        text/css css;
        image/svg+xml svg;
        application/json json;
        image/png png;
        image/jpeg jpg jpeg;
        image/gif gif;
        image/webp webp;
        text/html html htm;
    }

    # Default MIME type
    default_type application/octet-stream;

    # Prevent MIME type sniffing
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Enable compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/json image/svg+xml;

    # Cache control for static assets
    location ~* \.(svg|png|jpg|jpeg|gif|webp|ico)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    location ~* \.(css|js|mjs)$ {
        expires 1M;
        add_header Cache-Control "public";
    }

    # Don't cache HTML
    location ~* \.(html)$ {
        expires -1;
        add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0";
    }

    # Main location block - handle SPA routing
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Security: deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Logging
    access_log /var/log/nginx/pixli-pro-access.log;
    error_log /var/log/nginx/pixli-pro-error.log;
}

